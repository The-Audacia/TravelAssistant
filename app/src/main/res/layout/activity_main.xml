<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryText"
    android:orientation="vertical"
    tools:context="com.example.audacia.sample.MainActivity">

    <include layout="@layout/upper_box" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/AccentColor"
            android:text="Start"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/PrimaryText"
            android:textSize="50sp" />

        <Button
            android:id="@+id/bottom3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_img3"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/DisabledText"
            android:text="November 8"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/PrimaryText"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/SecondaryText"
            android:text="Namsan, Seoul 근처"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/PrimaryText"
            android:textSize="20sp" />

    </LinearLayout>

    <include layout="@layout/bottom_box" />

</LinearLayout>
