<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.audacia.sample.MainActivity"
    android:background="@color/PrimaryText"
    android:orientation="vertical">

    <include layout="@layout/upper_box"/>

    <LinearLayout
        android:id="@+id/travelNameLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/PrimaryColor"
        android:visibility="gone">

        <TextView
            android:id="@+id/addtravelName"
            android:textColor="@color/PrimaryText"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/DisabledText"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Start"
            android:textSize="50sp"
            android:textColor="@color/PrimaryText"
            android:textAlignment="center"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/AccentColor"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Finish"
            android:textSize="50sp"
            android:textColor="@color/PrimaryText"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="gone"/>

    </LinearLayout>

    <include layout="@layout/bottom_box"/>

</LinearLayout>
